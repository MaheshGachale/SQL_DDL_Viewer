{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "outDir": "out",
        "lib": [
            "es2020",
            "dom"
        ],
        "sourceMap": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "rootDir": "src",
        "strict": true,
        "jsx": "react",
        "esModuleInterop": true,
        "types": [
            "node",
            "vscode",
            "mocha",
            "react"
        ]
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}